<?xml version="1.0"?>
<tool_dependency>
    <package name="openbabel" version="2.3.2">
        <repository name="package_openbabel_2_3" owner="iuc" />
    </package>
    <package name="boost" version="1.53.0">
        <repository name="package_boost_1_53" owner="iuc" prior_installation_required="True" />
    </package>
    <set_environment version="1.0">
        <environment_variable name="EDEN_SCRIPT_PATH" action="set_to">$REPOSITORY_INSTALL_DIR</environment_variable>
    </set_environment>
    <package name="eden" version="1.0.1">
        <install version="1.0">
            <actions>
                <action type="download_by_url">https://github.com/bgruening/download_store/raw/master/EDeN/EDeN-0.5.0.tar.gz</action>

                <!-- populate the environment variables from the dependend repos -->
                <action type="set_environment_for_install">
                    <repository name="package_boost_1_53" owner="iuc">
                        <package name="boost" version="1.53.0" />
                    </repository>
                </action>

                <action type="shell_command">export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$BOOST_ROOT_DIR/lib/ &amp;&amp; make</action>
                <action type="move_file">
                    <source>EDeN</source>
                    <destination>$INSTALL_DIR/bin/</destination>
                </action>

                <action type="set_environment">
                    <environment_variable action="prepend_to" name="PATH">$INSTALL_DIR/bin</environment_variable>
                    <environment_variable action="append_to" name="LD_LIBRARY_PATH">$ENV[BOOST_ROOT_DIR]/lib/</environment_variable>
                </action>
            </actions>
        </install>
        <readme>Compiling EDeN requires a C++ compiler, usually g++.</readme>
    </package>
</tool_dependency>
