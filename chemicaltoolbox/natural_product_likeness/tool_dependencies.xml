<tool_dependency>
    <package name="np-likeness-scorer" version="1.4.1">
        <install version="1.0">
            <actions>
                <action type="download_by_url">http://downloads.sourceforge.net/project/np-likeness/Natural%20Product%20Likeness%20calculator%201.4.1.zip</action>
               <action type="move_file">
                    <source>Natural Product Likeness calculator 1.4.1/NPLikenessCalculator-1.4.1.jar</source>
                    <destination>$INSTALL_DIR/jars</destination>
                </action>
                <action type="set_environment">
                    <environment_variable name="JAVA_JAR_PATH" action="set_to">$INSTALL_DIR/jars</environment_variable>
                </action>
            </actions>
        </install>
        <readme>Opsin requires a JAVA (1.5+) runtime evironment.</readme>
    </package>
</tool_dependency>
