<tool id="CONVERTER_smiles_to_smiles" name="SMILES to SMILES" version="1.0.0">
    <description></description>
    <command >
        obabel -ismi $input 
        #if $can:
            -ocan
        #else:
            -osmi 
        #end if
            -O $output -e 
        $remove_h
        #if $iso_chi or $can or $exp_h:
            -x$iso_chi$exp_h$can
        #end if
        #if $dative_bonds:
            -b
        #end if
        2>&#38;1
    </command>
    <inputs>
        <param name="input" type="data" format="smi" label="Molecules in SD-format"/>
        <param name="iso_chi" type="boolean" label="Do not include isotopic or chiral markings" truevalue="i" falsevalue="" checked="false" />
        <param name="can" type="boolean" label="Output in canonical form" truevalue="c" falsevalue="" checked="false" />
        <param name="exp_h" type="boolean" label="Output explicit hydrogens as such" truevalue="h" falsevalue="" checked="false" />
        <param name="remove_h" type="boolean" label="Delete hydrogen atoms" truevalue="-d" falsevalue="" />
        <param name="dative_bonds" type="boolean" label="Convert dative bonds (e.g. [N+]([O-])=O to N(=O)=O)" truevalue="-b" falsevalue="" />
    </inputs>
    <outputs>
        <data name="output" format="smi"/>
    </outputs>
    <requirements>
        <requirement type="binary">obabel</requirement>
    </requirements>
    <help>
    </help>
</tool>
