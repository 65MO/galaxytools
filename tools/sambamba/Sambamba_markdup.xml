<tool id="sambamba_markdup" name="MarkDup" version="@WRAPPER_VERSION@">
    <description>Finds duplicate reads in BAM files !</description>
    <macros>
        <import>Sambamba_macros.xml</import>
    </macros>
    <expand macro="requirements" />
    <expand macro="stdio" />
    <command>
<![CDATA[
        ln -s ${input_file1} infile1.bam &&
        @EXECUTABLE     
        markdup 
        $r
        -l $l
        infile1.bam
        $output
]]>
    </command>
    <inputs>
        <expand macro="inputSetup1"/>
        <param name="r" type="boolean" truevalue="-r" falsevalue="" checked="false" label="Remove duplicates instead of just marking them"/>
        <param name="l" type="integer" value= "0" label="Compression level of the resulting file (from 0 to 9)"/>
    </inputs>
    <outputs>
        <data name="output" format="bam"/>
    </outputs>
    <tests>
        <test>
            <expand macro="inputSetup1"/>
            <param name="input_file1" value="Example.sorted.bam" ftype="bam"/>         
            <output name="o" file="MarkDup.bam">
                <assert_contents>
                    <has_text text="chr" />
                </assert_contents>
            </output>         
        </test>
    </tests>
    <help>
<![CDATA[
@REFERENCES@

Sambamba_markdup marks or removes duplicate reads. To determine whether a read is a duplicate or not, the same criteria as in Picard are used.
]]>
    </help>
    <expand macro="citations" />
</tool>
