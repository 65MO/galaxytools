<tool id="celldataset_plexprofgenes" name="Expression Plot" version="1.2.0">
    <description>
        Plot expression of specific genes of Single Cell Data
    </description>
    <stdio>
        <exit_code range="1:" level="fatal" description="Error occurred. Please check Tool Standard Error" />
        <exit_code range=":-1" level="fatal" description="Error occurred. Please check Tool Standard Error" />
    </stdio>
    <command interpreter="">
<![CDATA[
    Rscript $__tool_directory__/plotGenesGrouped.R
        $cell_data_set
        "$genes"
        $grouping
        $trend
        $out_file1 
]]>
    </command>
    <inputs>
        <param name="cell_data_set" type="data" format="data" label="Cell Dataset" />
        <param name="genes" type="text" label="Genes short names" />
        <param name="grouping" type="text" label="Grouping term" />
        <param name="trend" type="boolean" truevalue="T" falsevalue="F" checked="False" label="Plot trend?" />
    </inputs>
    <outputs>
        <data name="out_file1" format="pdf" />          
    </outputs>
    <help>
    </help>
    <citations>
        <citation type="doi">10.1038/nbt.2859</citation>
    </citations>
</tool>
