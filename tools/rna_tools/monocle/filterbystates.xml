<tool id="celldataset_filtercells" name="Filter Cells" version="1.2.0">
    <description>
        Filter cells by states
    </description>
    <stdio>
        <exit_code range="1:" level="fatal" description="Error occurred. Please check Tool Standard Error" />
        <exit_code range=":-1" level="fatal" description="Error occurred. Please check Tool Standard Error" />
    </stdio>
    <command>
<![CDATA[
    Rscript $__tool_directory__/filterByStates.R
        $cell_data_set
        "$states"
        $out_file1 
]]>
    </command>
    <inputs>
        <param name="cell_data_set" type="data" format="data" label="Cell Dataset" />
        <param name="states" type="text" default="" label="States to filter out" />
    </inputs>
    <outputs>
        <data name="out_file1" format="data" />          
    </outputs>
    <help>
*What it does*
    </help>
    <citations>
        <citation type="doi">10.1038/nbt.2859</citation>
    </citations>
</tool>
